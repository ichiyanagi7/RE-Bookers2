<div class="container">


  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/userinfo",user:@user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user) do %>
              <%= attachment_image_tag @books.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %><br>
              <%= @books.user.name %>
              <% end %>
            </td>

            <td>
              <%= link_to @books.title,book_path(@books) %>
            </td>

            <td>
              <%= @books.body %>
            </td>

            <td id="favorites_btn_<%= @books.id %>">
              <%= render "favorites/favorite",book: @books %>
            </td>

            <td nowrap>
                コメント数:<%= @books.book_comments.count %>
            </td>

          <% if @books.user == current_user %>
            <td>
              <%= link_to "Edit" ,edit_book_path(@books),class:"btn btn-success btn-sm" %>
            </td>
            <td>
              <%= link_to "Destroy",book_path(@books),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn btn-danger btn-sm" %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>

  <!--コメント一覧表示----------------------------------------------------------------->
      <h6 class="border-bottom mb-2">コメント一覧</h4>

      <table>
        <tbody>
        <% @book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user) do %>
              <%= attachment_image_tag book_comment.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %><br>
              <%= book_comment.user.name %>
              <% end %>
            </td>
            <td nowrap>
              <!--ここを非同期通信にする-->
              <%= book_comment.comment %>
            </td>
            <td>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy",book_book_comment_path(@books,book_comment), method: :delete,class:"btn btn-danger btn-sm" %>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>


  <!--コメント入力フォーム------------------------------------------------------------->
      <%= form_with(model:[@books,@book_comment],local:true) do |f| %>
        <div class="form-group">
          <%= f.text_area :comment ,class:"form-control" %>
        </div>
        <%= f.submit "送信",class:"btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>