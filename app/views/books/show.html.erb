<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/userinfo",user:@user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user) do %>
              <%= attachment_image_tag @books.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %><br>
              <%= @books.user.name %>
              <% end %>
            </td>

            <td>
              <%= link_to @books.title,book_path(@books) %>
            </td>

            <td>
              <%= @books.body %>
            </td>

            <td>
              <% if @books.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@books),method: :delete do %>
                  <i class="fas fa-heart"></i><%= @books.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@books),method: :post do %>
                  <i class="far fa-heart"></i><%= @books.favorites.count %>
                <% end %>
              <% end %>
            </td>

            <td nowrap>
                コメント数:<%= @books.book_comments.count %>
            </td>

          <% if @books.user == current_user %>
            <td>
              <%= link_to "Edit" ,edit_book_path(@books),class:"btn btn-success btn-sm" %>
            </td>

            <td>
              <%= link_to "Destroy",book_path,method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn btn-danger btn-sm" %>
            </td>

          <% end %>

          </tr>
        </tbody>
      </table>

      <div class="form-group">
        <%= form_with model:@book_comment,local:true do |f| %>

        <%= f.text_area :comment ,class:"form-control" %>
        <%= f.submit "送信" %>
        <% end %>

      </div>

    </div>
  </div>
</div>