<h2>Books search for "<%= @word %>"</h2>

<table class="table">
  <% if @range == "2" %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <td>
        <%= attachment_image_tag book.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:"40x40" %>
      </td>
      <td><%= link_to book.title,book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user,:profile_image,:fill,40,40,fallbck:"no_image.jpg",size:"40x40" %>
        </td>
        <td><%= link_to user.name,user_path(user) %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
    </tbody>
  <% end %>
</table>